# PostgreSQL Database
DATABASE_URL=postgresql://forex_user:password@localhost:5432/forex_trader

# API Keys
ANTHROPIC_API_KEY=your_anthropic_key_here
POLYGON_API_KEY=your_polygon_key_here

# Trading Configuration
STARTING_BALANCE=10000.00
RISK_PERCENT=1.55
MAX_LOT_SIZE=5.0
MIN_LOT_SIZE=0.01

# ECN Costs
COMMISSION_PER_LOT=3.50
DEFAULT_SPREAD_PIPS=0.3

# Rolling Window
ROLLING_WINDOW_MONTHS=6

# Percentile Strategy (P25, P50, P75)
TP_PERCENTILE=P50
SL_PERCENTILE=P75

# Pre-warm Timing (seconds before session)
OHLC_PREWARM_SECONDS=120
CHART_PREWARM_SECONDS=60

# S3 Backup (optional)
S3_BUCKET=forex-backtester-hasnain
S3_BACKUP_PREFIX=live-trader-backup/

# Server
HOST=0.0.0.0
PORT=8080
DEBUG=false
